{{> menu}}

<form class="ui equal width form" action="/user/updateuser/{{user.email}}" method="POST">
  <div class="fields">
    <div class="field">
      <label>First Name</label>
      <input placeholder="First Name" type="text" name="firstName" value="{{user.firstName}}">
    </div>
    <div class="field">
      <label>Last Name</label>
      <input placeholder="Last Name" type="text" name="lastName" value="{{user.lastName}}">
    </div>
  </div>
  <div class="fields">
    <div class="field">
      <label>Email</label>
      <input placeholder="Email" type="text" name="email" value="{{user.email}}">
    </div>
    <div class="field">
      <label>Password</label>
      <input placeholder="Password" type="text" name="password" value="{{user.password}}">
    </div>
  </div>
    <button class="ui blue submit button">Submit Changes</button>
</form>